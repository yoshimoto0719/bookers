<h1>Books</h1>

 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <tr><% @books.each do |book| %></tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id)  %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sureï¼Ÿ"} %></td>
    <% end %>
  </tbody>
 </table>


<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
  <%= pluralize(@book.errors.count, "error") %> saved error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  <% end %>